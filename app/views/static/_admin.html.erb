<html>
  <head>
  </head>

  <body>
    <div class="btn btn-default">
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
    </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="tcontainer">
                      <h1>Admin Dashboard</h1>
                      <h3>Users</h3>
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>User Id</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Birth Date</th>
                            <th>Gender</th>
                            <th>Bio</th>
                            <th>Delete User Account</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @users.each do |user| %>
                            <tr>
                              <td><%= user.id %></td>
                              <td><%= user.name %></td>
                              <td><%= user.email %></td>
                              <td><%= user.birthdate %></td>
                              <td><%= user.gender %></td>
                              <td><%= user.bio %></td>
                              <td><%= link_to 'Delete', cancel_user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>

                      <h3>User Logs</h3>
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Bed Time</th>
                            <th>Wake Time</th>
                            <th>Mood</th>
                            <th>Hours</th>
                            <th>Productivity</th>
                            <th>Notes</th>
                            <th>User Id</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @tracks.each do |track| %>
                            <tr>
                              <td><%= track.date %></td>
                              <td><%= track.bedtime %></td>
                              <td><%= track.waketime %></td>
                              <td><%= track.mood %></td>
                              <td><%= track.hours %></td>
                              <td><%= track.productivity %></td>
                              <td><%= track.notes %></td>
                              <td><%= track.user_id %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>

                      <br>
                    <h3>Wiki Articles</h3>
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Wiki Id</th>
                            <th>Title</th>
                            <th>Body</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @wikis.each do |wiki| %>
                            <tr>
                              <td><%= wiki.id %></td>
                              <td><%= wiki.title %></td>
                              <td><%= wiki.body %></td>
                              <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
                              <td><%= link_to 'Delete', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>

                      <h3>Wiki Comments</h3>
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th>Comment Id</th>
                              <th>User Name</th>
                              <th>Body</th>
                              <th>Wiki Id</th>
                              <th>Delete</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>

                          <tbody>
                            <% @comments.each do |comment| %>
                              <tr>
                                <td><%= comment.id %></td>
                                <td><%= comment.user_name %></td>
                                <td><%= comment.text %></td>
                                <td><%= comment.wiki_id %></td>
                                <td><%= link_to 'Delete', wiki_comment_path(comment, @wikis), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>

                      </div>

                      <br>

                      <div class="trcontainer">
                        <div class="ave">All Users Average Hours Per Day</div>
                        <div class="uchart">
                          Hours per Day (All Users)
                          <%= image_tag(@bar_chart) %>
                        </div>
                        <div class="uchart">
                          All Users' Mood Ratings
                        <%= image_tag(@line_chart) %>
                      </div>
                      <div class="uchart">
                        All Users' Productivity Ratings
                        <%= image_tag(@line_chart2) %>
                      </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
<p id="notice"><%= notice %></p>

</body>
</html>
