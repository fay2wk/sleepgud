  <body>
  <%= render 'nav' %>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="tcontainer">
                      <h1>Tracking My Sleep</h1>

                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Bed Time</th>
                            <th>Wake Time</th>
                            <th>Mood</th>
                            <th>Hours</th>
                            <th>Productivity</th>
                            <th>Notes</th>
                            <th>Edit Log</th>
                            <th>Delete Log</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @tracks.each do |track| %>
                            <tr>
                              <td><%= track.date %></td>
                              <td><%= track.bedtime %></td>
                              <td><%= track.waketime %></td>
                              <td><%= track.mood %></td>
                              <td><%= track.hours %></td>
                              <td><%= track.productivity %></td>
                              <td><%= track.notes %></td>
                              <td><%= link_to 'Edit', edit_track_path(track) %></td>
                              <td><%= link_to 'Delete', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>

                      <br>
                      <div>
                        <%= link_to 'View all logs', tracks_path %> |
                        <%= link_to 'New Log', new_track_path %>
                    </div>
                      </div>

                      <br>

                      <div class="trcontainer">
                        <div id="avetrack">Average Hours Per Day</div>
                        <div class="uchart">
                          Hours of Sleep per Day
                        <%= image_tag(@bar_chart) %>
                        </div>
                        <div class="uchart">
                          Mood Rating
                          <%= image_tag(@line_chart) %>
                        </div>
                        <div class="uchart">
                          Productivity Rating
                          <%= image_tag(@line_chart2) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
<p id="notice"><%= notice %></p>

</body>
</html>
