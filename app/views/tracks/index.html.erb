<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Day</th>
      <th>Hours</th>
      <th>Mood</th>
      <th>Product</th>
      <th>Notes</th>
      <th>Sleep cycle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.date %></td>
        <td><%= track.day %></td>
        <td><%= track.hours %></td>
        <td><%= track.mood %></td>
        <td><%= track.product %></td>
        <td><%= track.notes %></td>
        <td><%= track.sleep_cycle %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

