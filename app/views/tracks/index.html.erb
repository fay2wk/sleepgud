<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h4 class="sleepgud">SleepGud</h4>
                </li>
                <li>
                  <%= link_to "Your Profile", edit_user_registration_path %>
                </li>
                <li>
                    <a href="#">New Log</a>
                </li>
                <li>
                    <a href="#">Tracking</a>
                </li>
                <li>
                    <%= link_to "Sleep Wiki", wikis_path %>
                </li>
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#">FAQs</a>
                </li>
                <li>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="tcontainer">
                      <h1>Tracking My Sleep</h1>

                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Bed Time</th>
                            <th>Wake Time</th>
                            <th>Mood</th>
                            <th>Hours</th>
                            <th>Productivity</th>
                            <th>Notes</th>
                            <th>Edit Log</th>
                            <th>Delete Log</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @tracks.each do |track| %>
                            <tr>
                              <td><%= track.date %></td>
                              <td><%= track.bedtime %></td>
                              <td><%= track.waketime %></td>
                              <td><%= track.mood %></td>
                              <td><%= track.hours %></td>
                              <td><%= track.productivity %></td>
                              <td><%= track.notes %></td>
                              <td><%= link_to 'Edit', edit_track_path(track) %></td>
                              <td><%= link_to 'Delete', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>

                      <br>

                      <%= link_to 'New Log', new_track_path %>
                      </div>

                      <br>

                      <div class="trcontainer">


                      </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

